<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobsoft.pxlapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.mobsoft.pxlapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobsoft.pxlapp.LesroostersActivity"
            android:label="@string/title_activity_lesroosters"
            android:parentActivityName="com.mobsoft.pxlapp.MainActivity" >
        </activity>
        <activity
            android:name="com.mobsoft.pxlapp.InfoActivity"
            android:label="@string/title_activity_info"
            android:parentActivityName="com.mobsoft.pxlapp.MainActivity" >
        </activity>
        <activity
            android:name="com.mobsoft.pxlapp.WeekmenuActivity"
            android:label="@string/title_activity_weekmenu"
            android:parentActivityName="com.mobsoft.pxlapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mobsoft.pxlapp.MainActivity" />
        </activity>
        <activity
            android:name="com.mobsoft.pxlapp.LesroosterView"
            android:label="@string/title_activity_lesrooster_view"
            android:parentActivityName="com.mobsoft.pxlapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mobsoft.pxlapp.MainActivity" />
        </activity>
        <activity
            android:name="com.mobsoft.pxlapp.LesroosterViewRow"
            android:label="@string/title_activity_lesrooster_view_row" >
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.mobsoft.pxlapp.WeekmenuView"
            android:label="@string/title_activity_weekmenu_view"
            android:parentActivityName="com.mobsoft.pxlapp.WeekmenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mobsoft.pxlapp.MainActivity" />
        </activity>
        <activity
            android:name="com.mobsoft.pxlapp.WeekmenuViewRow"
            android:label="@string/title_activity_weekmenu_view_row" >
        </activity>
    </application>

</manifest>
