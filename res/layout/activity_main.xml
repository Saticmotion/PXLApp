<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_lesroosters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_lesroosters"  
        android:onClick="openLesroosters" />
        
	<Button
        android:id="@+id/button_weekmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_weekmenu"  
        android:onClick="openWeekmenu" />  

    <Button
        android:id="@+id/button_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_info"  
        android:onClick="openInfo" />

</LinearLayout>
