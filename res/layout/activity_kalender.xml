<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
 	xmlns:tools="http://schemas.android.com/tools"
 	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/KalenderFrame"
    tools:context=".KalenderActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/soortSpinner"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:entries="@array/lessoort" />

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Legende" 
                android:onClick="toonLegende"/>

        </LinearLayout>
	    	
		    <TableLayout
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:divider="@color/green_accent"
		     android:id="@+id/KalenderTable">
			
		   	
		     <TableRow
		         android:id="@+id/tableRow1"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content" >
		         
		     </TableRow> 
		     
		 </TableLayout>
	</LinearLayout>
</ScrollView>
